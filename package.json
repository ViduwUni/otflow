{
  "name": "otflow",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "backend",
    "frontend"
  ],
  "scripts": {
    "dev": "concurrently -n \"Backend,Frontend\" -c \"cyan,magenta\" \"npm:dev --workspace backend\" \"npm:dev --workspace frontend\"",
    "build": "npm run build --workspace backend && npm run build --workspace frontend"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
